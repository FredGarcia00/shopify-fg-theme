{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="hero hero2 hero2--{{ section.settings.hero_height }}">
  <div class="hero2__collection1">
    {% comment %}
      <img
        src="https://images.pexels.com/photos/6626903/pexels-photo-6626903.jpeg?auto=compress&amp;cs=tinysrgb&amp;dpr=3&amp;h=750&amp;w=1260"
        class="hero2__bg"
      >
    {% endcomment %}
    <div
      class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}{% if section.settings.image1 != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
      {% if section.settings.height == 'adapt' and section.settings.image1 != blank %}
        style="padding-bottom: {{ 1 | divided_by: section.settings.image1.aspect_ratio | times: 100 }}%;"
      {% endif %}
    >
      {%- if section.settings.image1 != blank -%}
        {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
          {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
          {%- capture sizes -%}
          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
          (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
        {%- endcapture -%}
        {%- else -%}
          {%- assign widths = '165, 360, 535, 750, 1070, 2000' -%}
          {%- capture sizes -%}
          (min-width: 750px)
        {%- endcapture -%}
        {%- endif -%}
        {{
          section.settings.image1
          | image_url: width: 2000
          | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'hero2__bg'
        }}
      {%- else -%}
        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
    <div
      class="hero2__content-container"
      style="background-color:{{section.settings.color_background1 |color_modify: 'alpha', section.settings.opacity1}}"
    >
      <div class="hero2__info">
        {%- if section.settings.button_label1 != blank -%}
          <a
            class="hero2__button"
            {{ section.shopify_attributes }}
            {% if section.settings.button_link1 == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link1 }}"
            {% endif %}
          >
            {{ section.settings.button_label1 | escape }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="hero2__collection2">
    {% comment %}
      <img
        src="https://images.pexels.com/photos/4355398/pexels-photo-4355398.jpeg?auto=compress&amp;cs=tinysrgb&amp;dpr=2&amp;h=750&amp;w=1260"
        class="hero2__bg"
      >
    {% endcomment %}
    <div
      class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}{% if section.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
      {% if section.settings.height == 'adapt' and section.settings.image != blank %}
        style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
      {% endif %}
    >
      {%- if section.settings.image2 != blank -%}
        {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
          {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
          {%- capture sizes -%}
          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
          (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
        {%- endcapture -%}
        {%- else -%}
          {%- assign widths = '165, 360, 535, 750, 1070, 2000' -%}
          {%- capture sizes -%}
          (min-width: 750px)
        {%- endcapture -%}
        {%- endif -%}
        {{
          section.settings.image2
          | image_url: width: 2000
          | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'hero2__bg'
        }}
      {%- else -%}
        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
    <div
      class="hero2__content-container"
      style="background-color:{{section.settings.color_background2 |color_modify: 'alpha', section.settings.opacity2}}"
    >
      <div class="hero2__info">
        {%- if section.settings.button_label2 != blank -%}
          <a
            class="hero2__button"
            {{ section.shopify_attributes }}
            {% if section.settings.button_link2 == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link2 }}"
            {% endif %}
          >
            {{ section.settings.button_label2 | escape }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
